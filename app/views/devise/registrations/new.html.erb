<div class="row">
  <div class="col-lg-4 offset-lg-4">
    <h1 class="text-center">Sign Up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.text_field :name, autofocus: false, class: 'form-control', placeholder: "Full name" %>
      </div>

      <div class="mb-3">
        <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Email Address" %>
      </div>

      <div class="mb-3">
        <%= f.text_field :matric_number, autofocus: false, class: 'form-control', placeholder: "Matric number" %>
      </div>

      <div class="mb-3">
        <%= f.text_field :state, autofocus: false, class: 'form-control', placeholder: "State of origin" %>
      </div>

      <div class="mb-3">
        <%= f.text_field :nationality, autofocus: false, class: 'form-control', placeholder: "Nationality" %>
      </div>

      <div class="mb-3">
        <%= f.text_field :gender, autofocus: false, class: 'form-control', placeholder: "Gender" %>
      </div>

      <div class="mb-3">
        <%= f.text_field :level, autofocus: false, class: 'form-control', placeholder: "Level" %>
      </div>

      <div class="mb-3">
        <%= f.date_field :birth_date, autofocus: false, class: 'form-control', placeholder: "Date of Birth" %>
      </div>

      <div class="mb-3">
        <%= f.text_field :department, autofocus: false, class: 'form-control', placeholder: "Department" %>
      </div>

      <div class="mb-3">
        <%= f.number_field :duration, autofocus: false, class: 'form-control', placeholder: "Duration" %>
      </div>

      <div class="mb-3">
        <%= f.number_field :year, autofocus: false, class: 'form-control', placeholder: "Year" %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
      </div>

      <div class="mb-3 d-grid">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
